<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text.White_13sp" parent="android:TextAppearance">
        <item name="android:textColor">@color/white</item>

        <item name="android:textSize">13sp</item>
    </style>

    <style name="Text.black_13sp" parent="android:TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="lineSpacing">2sp</item>
    </style>

    <style name="fab_tv" parent="android:TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="lineSpacing">2sp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Transparent" parent="@style/Theme.AppCompat">
        <!--Titlebar 없애는 옵션
            true : Titlebar x
            false : Titlebar o
        -->
        <item name="windowNoTitle">true</item>
        <!-- 투명정도를 나타내는 색-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <!--
        android:backgroundDimEnabled
        true - 반투명 검정 /  false - 완전 투명
        -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

<!--    Setting Fragment's button style-->
    <style name="Text.setting" parent="android:TextAppearance">
        <item name="android:textColor">#333333</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="lineSpacing">2sp</item>
    </style>

<!--    BottomSheetFragment's text style-->
    <style name="Text.bottomSheet" parent="android:TextAppearance">
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NumberPicker" >
        <item name="colorControlNormal">#00000000</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColorPrimary">@color/btn_color</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>