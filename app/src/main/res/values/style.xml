<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text.White_13sp" parent="android:TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Text.black_13sp" parent="android:TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="lineSpacing">2sp</item>
    </style>

    <style name="Text.222222_bold" parent="android:TextAppearance">
        <item name="android:textColor">#222222</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="lineSpacing">2sp</item>
    </style>

    <style name="Text.222222_normal" parent="android:TextAppearance">
        <item name="android:textColor">#222222</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
        <item name="lineSpacing">7sp</item>
    </style>

    <style name="Text.cccfd7_normal" parent="android:TextAppearance">
        <item name="android:textColor">#cccfd7</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:textStyle">bold</item>
        <item name="lineSpacing">7sp</item>
    </style>

    <style name="fab_tv" parent="android:TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="lineSpacing">2sp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Transparent" parent="@style/Theme.AppCompat">
        <!--Titlebar 없애는 옵션
            true : Titlebar x
            false : Titlebar o
        -->
        <item name="windowNoTitle">true</item>
        <!-- 투명정도를 나타내는 색-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <!--
        android:backgroundDimEnabled
        true - 반투명 검정 /  false - 완전 투명
        -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--    Setting Fragment's button style-->
    <style name="Text.setting" parent="android:TextAppearance">
        <item name="android:textColor">#333333</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="lineSpacing">2sp</item>
    </style>

    <!--    BottomSheetFragment's text style-->
    <style name="Text.bottomSheet" parent="android:TextAppearance">
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NumberPicker">
        <item name="colorControlNormal">#97b3ff</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColorPrimary">#7ea1ff</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.record_16sp" parent="android:TextAppearance">
        <item name="android:textColor">#cccfd7</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">12sp</item>
    </style>

    <style name="Text.advertising_14sp" parent="android:TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="Text.diary_backup" parent="android:TextAppearance">
        <item name="android:textColor">#333333</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.05</item>
    </style>

    <style name="Widget"></style>

    <style name="Widget.ProgressBar">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">3500</item>
    </style>

    <style name="Widget.ProgressBar.Vertical">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/vertical_round_bar_off</item>
    </style>


    <!-- 달력에 사용하는 스타일 -->
    <style name="CustomTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/mcv_text_date_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- 여기서 요일, 달력 안 숫자들의 폰트 설정을 수행할 수 있다 -->
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="mcv_selectionMode">single</item>
        <item name="mcv_showOtherDates">all</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- 달력 안의 숫자들에 적용되는 스타일 -->
    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/black_22</item>
<!--        <item name="android:weekNumberColor">@android:color/holo_red_light</item>-->
    </style>

    <!-- 달력 안의 요일들에 적용되는 스타일 -->
    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/btn_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/s_core_dream_6</item>
    </style>

    <!-- 연, 월을 표시하는 헤더에 적용되는 스타일 -->
    <style name="CalendarWidgetHeader">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black_22</item>
    </style>
</resources>