<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context=".ui.main.MainActivity">

    <View
        android:id="@+id/shadowView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="2022.04.09"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_title"
        android:textSize="28sp"
        app:layout_constraintLeft_toLeftOf="@id/date"
        app:layout_constraintTop_toBottomOf="@id/date" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_title"
        tools:listitem="@layout/item_diary_list" />

    <TextView
        android:id="@+id/record_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="@string/record"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/date"
        app:layout_constraintTop_toBottomOf="@id/recycler" />

    <TextView
        android:id="@+id/add_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/record"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/record_tv"
        app:layout_constraintTop_toTopOf="@id/record_tv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/record_text"
        android:textColor="#cccfd7"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@id/record_tv"
        app:layout_constraintTop_toBottomOf="@id/record_tv" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_const"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:background="@drawable/round_30_top"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/cheer_up_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:textColor="@color/white"
            android:text="응원을 보내요"
            app:layout_constraintLeft_toLeftOf="@id/bottom_const"
            app:layout_constraintTop_toTopOf="@id/bottom_const" />

        <TextView
            style="@style/Text.White_13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/cheer_up_contents"
            app:layout_constraintLeft_toLeftOf="@id/cheer_up_tv"
            app:layout_constraintTop_toBottomOf="@id/cheer_up_tv" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/bottom_admob"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="79dp"
        android:backgroundTint="#97b3ff"
        android:src="@drawable/ic_x_24_more"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/setting_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_x_24_setting"
        android:visibility="invisible"
        app:fabSize="auto"
        app:layout_constraintBottom_toTopOf="@id/fab"
        app:layout_constraintLeft_toLeftOf="@id/fab"
        app:layout_constraintRight_toRightOf="@id/fab" />

    <TextView
        android:id="@+id/setting_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Setting"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/setting_fab"
        app:layout_constraintRight_toLeftOf="@id/setting_fab"
        app:layout_constraintTop_toTopOf="@id/setting_fab" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/cheering_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:elevation="6dp"
        android:src="@drawable/ic_x_24_wording"
        android:visibility="invisible"
        app:borderWidth="0dp"
        app:fabSize="auto"
        app:layout_constraintBottom_toTopOf="@id/setting_fab"
        app:layout_constraintRight_toRightOf="@id/setting_fab"
        app:pressedTranslationZ="12dp" />

    <TextView
        android:id="@+id/cheering_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/cheering"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/cheering_fab"
        app:layout_constraintRight_toLeftOf="@id/cheering_fab"
        app:layout_constraintTop_toTopOf="@id/cheering_fab" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/calendar_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:elevation="6dp"
        android:src="@drawable/ic_x_24_calendar"
        android:visibility="invisible"
        app:borderWidth="0dp"
        app:fabSize="auto"
        app:layout_constraintBottom_toTopOf="@id/cheering_fab"
        app:layout_constraintRight_toRightOf="@id/cheering_fab"
        app:pressedTranslationZ="12dp" />

    <TextView
        android:id="@+id/calendar_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/calendar"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/calendar_fab"
        app:layout_constraintRight_toLeftOf="@id/calendar_fab"
        app:layout_constraintTop_toTopOf="@id/calendar_fab" />


</androidx.constraintlayout.widget.ConstraintLayout>