<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_dialog">

    <NumberPicker
        android:id="@+id/time_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:theme="@style/NumberPicker"
        app:layout_constraintEnd_toStartOf="@id/hour_picker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <NumberPicker
        android:id="@+id/hour_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:theme="@style/NumberPicker"
        app:layout_constraintEnd_toStartOf="@id/minute_picker"
        app:layout_constraintStart_toEndOf="@id/time_picker"
        app:layout_constraintTop_toTopOf="parent" />

    <NumberPicker
        android:id="@+id/minute_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/NumberPicker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/hour_picker"
        app:layout_constraintTop_toTopOf="@id/hour_picker" />

    <TextView
        android:id="@+id/cancel_btn"
        style="@style/Text.bottomSheet"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:text="@string/cancel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/confirm_btb"
        app:layout_constraintTop_toBottomOf="@id/hour_picker" />

    <View
        android:layout_width="1dp"
        android:layout_height="18dp"
        android:background="#d5d9e2"
        app:layout_constraintBottom_toBottomOf="@id/cancel_btn"
        app:layout_constraintLeft_toRightOf="@id/cancel_btn"
        app:layout_constraintRight_toLeftOf="@id/confirm_btb"
        app:layout_constraintTop_toTopOf="@id/cancel_btn" />


    <TextView
        android:id="@+id/confirm_btb"
        style="@style/Text.bottomSheet"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:gravity="center"
        android:text="@string/finish"
        app:layout_constraintLeft_toRightOf="@id/cancel_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/cancel_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>