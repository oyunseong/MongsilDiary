<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <com.mongsil.mongsildiary.customView.AllowSwitch
        android:id="@+id/morning"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:switch_text_color="@color/white"
        app:text="@string/morning"
        app:time_text="AM 07:00" />

    <com.mongsil.mongsildiary.customView.AllowSwitch
        android:id="@+id/afternoon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/morning"
        app:switch_text_color="@color/white"
        app:text="@string/afternoon"
        app:time_text="PM 12:30" />

    <com.mongsil.mongsildiary.customView.AllowSwitch
        android:id="@+id/evening"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/afternoon"
        app:switch_text_color="@color/white"
        app:text="@string/evening"
        app:time_text="PM 07:00" />


    <com.mongsil.mongsildiary.customView.AllowSwitch
        android:id="@+id/end_of_the_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/evening"
        app:switch_text_color="@color/white"
        app:text="@string/end_of_the_day"
        app:time_text="PM 11:00" />


</androidx.constraintlayout.widget.ConstraintLayout>